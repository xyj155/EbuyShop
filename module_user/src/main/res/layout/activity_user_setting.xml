<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#fff"
    android:orientation="vertical"
    tools:context="com.example.user.view.UserSettingActivity">

    <include layout="@layout/common_toolbar" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_55"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tv_message_push"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_55"
            android:drawablePadding="@dimen/dp_8"
            android:gravity="center|left"
            android:paddingLeft="@dimen/dp_12"
            android:paddingRight="@dimen/dp_8"
            android:text="消息推送"
            android:textColor="#000"
            android:textSize="16sp" />

        <com.example.commonlib.view.SwitchButton
            android:id="@+id/sw_default"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="@dimen/dp_16" />
    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_1"
        android:background="#fafafa" />

    <TextView
        android:id="@+id/tv_user_address"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_55"
        android:drawableRight="@mipmap/ic_category_arraw_right_n"
        android:drawablePadding="@dimen/dp_8"
        android:gravity="center|left"
        android:paddingLeft="@dimen/dp_12"
        android:paddingRight="@dimen/dp_8"
        android:text="地址管理"
        android:textColor="#000"
        android:textSize="16sp" />

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_1"
        android:background="#fafafa" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_55"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="@dimen/dp_55"

            android:drawablePadding="@dimen/dp_8"
            android:gravity="center|left"
            android:paddingLeft="@dimen/dp_12"
            android:paddingRight="@dimen/dp_8"
            android:text="清空缓存"
            android:textColor="#000"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/tv_clean_cache"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_alignParentRight="true"
            android:drawableRight="@mipmap/ic_category_arraw_right_n"
            android:gravity="right|center"
            android:paddingRight="@dimen/dp_8"
            android:textColor="#000"
            android:textSize="16sp" />
    </RelativeLayout>


    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_9"
        android:background="#fafafa" />

    <TextView
        android:id="@+id/tv_update"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_55"
        android:drawableRight="@mipmap/ic_category_arraw_right_n"
        android:drawablePadding="@dimen/dp_8"
        android:gravity="center|left"
        android:paddingLeft="@dimen/dp_12"
        android:paddingRight="@dimen/dp_8"
        android:text="版本更新"
        android:textColor="#000"
        android:textSize="16sp" />

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_1"
        android:background="#fafafa" />

    <TextView
        android:id="@+id/tv_reback"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_55"
        android:drawableRight="@mipmap/ic_category_arraw_right_n"
        android:drawablePadding="@dimen/dp_8"
        android:gravity="center|left"
        android:paddingLeft="@dimen/dp_12"
        android:paddingRight="@dimen/dp_8"
        android:text="意见反馈"
        android:textColor="#000"
        android:textSize="16sp" />

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_1"
        android:background="#fafafa" />

    <TextView
        android:id="@+id/tv_about"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_55"
        android:drawableRight="@mipmap/ic_category_arraw_right_n"
        android:drawablePadding="@dimen/dp_8"
        android:gravity="center|left"
        android:paddingLeft="@dimen/dp_12"
        android:paddingRight="@dimen/dp_8"
        android:text="关于商学院"
        android:textColor="#000"
        android:textSize="16sp" />

    <TextView
        android:id="@+id/tv_login"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/dp_20"
        android:background="@drawable/btn_login_out_bg"
        android:gravity="center"
        android:padding="@dimen/dp_16"
        android:text="退出当前账号"
        android:textColor="#000" />

</LinearLayout>
