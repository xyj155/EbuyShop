<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:background="#fff"
    android:layout_height="match_parent"
    tools:context=".LoginActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_marginTop="78dp"
        android:orientation="vertical"
        android:paddingLeft="@dimen/dp_18"
        android:paddingRight="@dimen/dp_18">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="@dimen/dp_12"
            android:text="欢迎登录商学院"
            android:textColor="#000"
            android:textSize="@dimen/dp_27"
            android:textStyle="bold" />

        <EditText
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_50"
            android:inputType="phone|number"
            android:textSize="15sp"
            android:layout_marginTop="@dimen/dp_8"
            android:layout_marginBottom="@dimen/dp_10"
            android:background="@drawable/login_border_1_bg"
            android:hint="请输入手机号"
            android:paddingLeft="@dimen/dp_30" />

        <EditText
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_50"
            android:textSize="15sp"
            android:background="@drawable/login_border_1_bg"
            android:hint="请输入密码"
            android:inputType="textPassword"
            android:paddingLeft="@dimen/dp_30" />
        <TextView
            android:layout_width="match_parent"
            android:layout_marginTop="@dimen/dp_30"
            android:textColor="#fff"
            android:id="@+id/tv_login"
            android:text="登录"
            android:gravity="center"
            android:textSize="17sp"
            android:background="@drawable/login_tv_1_bg"
            android:layout_height="@dimen/dp_50"/>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="验证码登陆"
            android:textSize="13sp"
            android:padding="@dimen/dp_8"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_alignParentEnd="true"
                android:padding="@dimen/dp_8"
                android:text="忘记密码"
                android:textSize="13sp"
                android:layout_alignParentRight="true" />
        </RelativeLayout>

    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/ll_login"
        android:layout_marginTop="-30dp"
        android:gravity="center"
        android:orientation="horizontal">

        <View
            android:layout_width="@dimen/dp_80"
            android:layout_height="@dimen/dp_0.5"
            android:background="#d8d8d8" />

        <TextView
            android:layout_width="60dp"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="或" />

        <View
            android:layout_width="@dimen/dp_80"
            android:layout_height="@dimen/dp_0.5"
            android:background="#d8d8d8" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/ll_login"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:orientation="horizontal"
        android:paddingTop="@dimen/dp_8"
        android:paddingBottom="@dimen/dp_15"
        android:weightSum="3">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:id="@+id/iv_qq"
            android:src="@mipmap/ic_qq" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:src="@mipmap/ic_wechat"
            android:id="@+id/iv_wechat"/>

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:id="@+id/iv_sina"
            android:src="@mipmap/ic_weibo" />
    </LinearLayout>
</RelativeLayout>