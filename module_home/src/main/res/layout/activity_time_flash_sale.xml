<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_200"
        android:background="@drawable/live_vip_privileged_bg" />

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        tools:context="com.example.home.view.TimeFlashSaleActivity">

        <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
            android:id="@+id/tb_common"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_55"
            android:layout_marginTop="@dimen/dp_25">


            <ImageView
                android:id="@+id/iv_close"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_margin="@dimen/dp_8"
                android:src="@mipmap/mall_product_back_white" />

            <TextView
                android:id="@+id/tv_title"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_alignParentTop="true"
                android:layout_centerHorizontal="true"
                android:ellipsize="end"
                android:gravity="center|left"
                android:maxLength="11"
                android:text="限时抢购"
                android:textColor="#fff"
                android:textSize="19sp"
                android:textStyle="bold" />
        </RelativeLayout>

        <RadioGroup
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingLeft="@dimen/dp_10"
            android:paddingRight="@dimen/dp_10"
            android:weightSum="4">

            <RadioButton
                android:id="@+id/rb_time1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/dp_2"
                android:layout_weight="1"
                android:background="@drawable/rb_flash_sell_bg_selector"
                android:button="@null"
                android:gravity="center"
                android:paddingLeft="@dimen/dp_10"
                android:paddingTop="@dimen/dp_5"
                android:paddingRight="@dimen/dp_10"
                android:paddingBottom="@dimen/dp_5"
                android:text="10：00"
                android:textColor="@color/rb_time_seller_text_select"
                android:textSize="@dimen/dp_20"
                android:textStyle="bold" />

            <RadioButton
                android:id="@+id/rb_time2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/dp_2"
                android:layout_weight="1"
                android:background="@drawable/rb_flash_sell_bg_selector"
                android:button="@null"
                android:gravity="center"
                android:paddingLeft="@dimen/dp_10"
                android:paddingTop="@dimen/dp_5"
                android:paddingRight="@dimen/dp_10"
                android:paddingBottom="@dimen/dp_5"
                android:text="10：00"
                android:textColor="@color/rb_time_seller_text_select"
                android:textSize="@dimen/dp_20"
                android:textStyle="bold" />

            <RadioButton
                android:id="@+id/rb_time3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/dp_2"
                android:layout_weight="1"
                android:background="@drawable/rb_flash_sell_bg_selector"
                android:button="@null"
                android:gravity="center"
                android:paddingLeft="@dimen/dp_10"
                android:paddingTop="@dimen/dp_5"
                android:paddingRight="@dimen/dp_10"
                android:paddingBottom="@dimen/dp_5"
                android:text="10：00"
                android:textColor="@color/rb_time_seller_text_select"
                android:textSize="@dimen/dp_20"
                android:textStyle="bold" />

            <RadioButton
                android:id="@+id/rb_time4"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/dp_2"
                android:layout_weight="1"
                android:background="@drawable/rb_flash_sell_bg_selector"
                android:button="@null"
                android:gravity="center"
                android:paddingLeft="@dimen/dp_10"
                android:paddingTop="@dimen/dp_5"
                android:paddingRight="@dimen/dp_10"
                android:paddingBottom="@dimen/dp_5"
                android:text="10：00"
                android:textColor="@color/rb_time_seller_text_select"
                android:textSize="@dimen/dp_20"
                android:textStyle="bold" />
        </RadioGroup>
        <LinearLayout
            android:layout_width="match_parent"
            android:padding="@dimen/dp_8"
            android:background="@drawable/alpha_bg"
            android:layout_marginLeft="@dimen/dp_15"
            android:layout_marginRight="@dimen/dp_15"
            android:layout_marginTop="@dimen/dp_17"
            android:layout_height="match_parent">
            <android.support.v7.widget.RecyclerView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:id="@+id/ry_time_sell"/>
        </LinearLayout>
    </LinearLayout>
</FrameLayout>
