<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#fff"
    android:orientation="vertical">

    <com.scwang.smartrefresh.layout.SmartRefreshLayout
        android:id="@+id/srHome"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true">

        <com.example.commonlib.view.CustomRefreshHeader
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_50" />

        <com.example.commonlib.view.ObservableScrollView
            android:id="@+id/slHome"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <com.example.commonlib.view.ArcImageView
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp_210"
                    android:scaleType="fitXY"
                    android:src="@drawable/mall_home_head_bg"
                    app:arcHeight="17dp" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">

                    <com.zhouwei.mzbanner.MZBannerView
                        android:id="@+id/banner"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/dp_158"
                        android:layout_marginTop="@dimen/dp_75"
                        android:layout_marginBottom="@dimen/dp_15"
                        app:canLoop="true"
                        app:indicatorAlign="center"
                        app:indicatorPaddingLeft="10dp"
                        app:open_mz_mode="true" />


                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="#fff"
                        android:orientation="horizontal"
                        android:padding="@dimen/dp_5"
                        android:weightSum="5">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:id="@+id/iv_news"
                            android:layout_weight="1"
                            android:drawableTop="@mipmap/l_chongzhi_gouwu"
                            android:drawablePadding="@dimen/dp_6"
                            android:gravity="center"
                            android:text="新上架"
                            android:textColor="#000"
                            android:textSize="13sp" />

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:drawableTop="@mipmap/l_chongzhi_zaotang"
                            android:drawablePadding="@dimen/dp_6"
                            android:id="@+id/tv_goods_news"
                            android:gravity="center"
                            android:text="大牌热卖"
                            android:textColor="#000"
                            android:textSize="13sp" />

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:drawableTop="@mipmap/l_chongzhi_yinshui"
                            android:drawablePadding="@dimen/dp_6"
                            android:gravity="center"
                            android:id="@+id/iv_school_vip"
                            android:text="打折促销"
                            android:textColor="#000"
                            android:textSize="13sp" />


                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:drawableTop="@mipmap/l_chongzhi_xiyi"
                            android:id="@+id/iv_best"
                            android:drawablePadding="@dimen/dp_6"
                            android:gravity="center"
                            android:text="闲置商品"
                            android:textColor="#000"
                            android:textSize="13sp" />

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:id="@+id/iv_share"
                            android:drawableTop="@mipmap/l_chongzhi_chuifeng"
                            android:drawablePadding="@dimen/dp_6"
                            android:gravity="center"
                            android:text="社区讨论"
                            android:textColor="#000"
                            android:textSize="13sp" />

                    </LinearLayout>


                    <View
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/dp_3"
                        android:background="#fafafa" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/dp_44"
                        android:gravity="center|left"
                        android:orientation="horizontal">

                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="@dimen/dp_6.5"
                            android:layout_marginEnd="@dimen/dp_6.5"
                            android:padding="@dimen/dp_4"
                            android:src="@mipmap/mall_home_notice" />

                        <View
                            android:layout_width="@dimen/dp_2"
                            android:layout_height="@dimen/dp_20"
                            android:background="#ffd600" />

                        <com.gongwen.marqueen.MarqueeView
                            android:id="@+id/marqueeView"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:flipInterval="8000"
                            android:inAnimation="@anim/in_top"
                            android:outAnimation="@anim/out_bottom"
                            app:marqueeAnimDuration="2000" />
                    </LinearLayout>


                    <LinearLayout
                        android:id="@+id/ll_flash_time"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/dp_7"
                        android:layout_marginRight="@dimen/dp_7"
                        android:layout_marginBottom="@dimen/dp_7"
                        android:background="@drawable/abc_home_timersell_bg"
                        android:orientation="vertical">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:padding="@dimen/dp_9"
                                android:text="限时抢购"
                                android:textColor="#000"
                                android:textSize="16sp"
                                android:textStyle="bold" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:background="@mipmap/mall_flash_sale_time"
                                android:text=" 03  48  50"
                                android:textColor="#fff"
                                android:textSize="@dimen/dp_15" />

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:drawableRight="@mipmap/ic_arrow_right"
                                android:drawablePadding="@dimen/dp_10"
                                android:gravity="center|right"
                                android:paddingRight="@dimen/dp_7"
                                android:text="更多" />
                        </LinearLayout>

                        <android.support.v7.widget.RecyclerView
                            android:id="@+id/ry_timerPurse"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_margin="@dimen/dp_4" />
                    </LinearLayout>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/dp_4"
                        android:layout_marginBottom="@dimen/dp_4"
                        android:paddingLeft="@dimen/dp_20"
                        android:paddingRight="@dimen/dp_10"
                        android:text="热卖推广"
                        android:textColor="#000"
                        android:textStyle="bold" />

                    <android.support.v7.widget.RecyclerView
                        android:id="@+id/ryHot"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/dp_7"
                        android:layout_marginRight="@dimen/dp_7" />



                    <FrameLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/dp_5">



                        <ImageView
                            android:layout_width="match_parent"
                            android:id="@+id/ivBanner"
                            android:scaleType="fitXY"
                            android:layout_height="@dimen/dp_120"
                            android:layout_marginTop="@dimen/dp_10" />
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:background="@drawable/bg_guess_status_n"
                            android:padding="@dimen/dp_3"
                            android:text="为你推荐"
                            android:textStyle="bold"
                            android:textColor="#fff" />
                    </FrameLayout>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:layout_marginTop="@dimen/dp_8"
                        android:orientation="horizontal">

                        <View
                            android:layout_width="@dimen/dp_50"
                            android:layout_height="@dimen/dp_1"
                            android:background="#d8d8d8" />

                        <TextView
                            android:id="@+id/tv_name"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="@dimen/dp_3"
                            android:layout_marginRight="@dimen/dp_3"
                            android:padding="@dimen/dp_8"
                            android:text="推荐商品" />

                        <View
                            android:layout_width="@dimen/dp_50"
                            android:layout_height="@dimen/dp_1"
                            android:background="#d8d8d8" />

                    </LinearLayout>
                    <android.support.v7.widget.RecyclerView
                        android:id="@+id/ryPurse"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                      />
                </LinearLayout>
            </FrameLayout>

        </com.example.commonlib.view.ObservableScrollView>

    </com.scwang.smartrefresh.layout.SmartRefreshLayout>

    <LinearLayout
        android:id="@+id/llTitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="horizontal"
        android:paddingLeft="@dimen/dp_8"
        android:paddingTop="@dimen/dp_25"
        android:paddingRight="@dimen/dp_5"
        android:paddingBottom="@dimen/dp_5">


        <ImageView
            android:id="@+id/ivKind"
            android:layout_width="@dimen/dp_24"
            android:layout_height="@dimen/dp_24"
            android:src="@mipmap/home_kind" />


        <TextView
            android:id="@+id/tvSearch"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_36"
            android:layout_marginLeft="@dimen/dp_8"
            android:layout_marginRight="@dimen/dp_8"
            android:layout_weight="0.45"
            android:background="@drawable/home_search_bg"
            android:drawableLeft="@mipmap/home_search"
            android:drawablePadding="@dimen/dp_8"
            android:gravity="center|left"
            android:paddingLeft="@dimen/dp_6"
            android:text="搜索你想要的商品"
            android:textSize="13.5sp" />


        <ImageView
            android:id="@+id/ivShopCar"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_24"
            android:layout_weight="2.25"
            android:src="@mipmap/home_shopcar"
            android:visibility="gone" />

    </LinearLayout>
</RelativeLayout>
