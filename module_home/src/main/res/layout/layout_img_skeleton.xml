<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#fff"
    android:orientation="vertical">

    <com.scwang.smartrefresh.layout.SmartRefreshLayout
        android:id="@+id/srHome"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true">

        <pl.droidsonroids.gif.GifImageView
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_100"
            android:layout_marginTop="@dimen/dp_30"
            android:src="@drawable/loadingview"
            app:layout_srlBackgroundColor="@android:color/transparent"
            app:layout_srlSpinnerStyle="Translate" />

        <com.example.commonlib.view.ObservableScrollView
            android:id="@+id/slHome"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <com.example.commonlib.view.ArcImageView
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp_210"
                    android:scaleType="fitXY"
                    app:arcHeight="17dp" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">

                    <com.zhouwei.mzbanner.MZBannerView
                        android:id="@+id/banner"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/dp_148"
                        android:background="#f1f1f1"
                        android:layout_marginRight="@dimen/dp_20"
                        android:layout_marginLeft="@dimen/dp_20"
                        android:layout_marginTop="@dimen/dp_75"
                        android:layout_marginBottom="@dimen/dp_6"
                        app:canLoop="true"
                        app:indicatorAlign="center"
                        app:indicatorPaddingLeft="10dp"
                        app:open_mz_mode="true" />
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:weightSum="5">
    <ImageView
        android:layout_margin="@dimen/dp_6"
        android:layout_width="90dp"
        android:layout_weight="1"
        android:layout_height="@dimen/dp_60"
        android:background="@color/light_transparent"/>
    <ImageView
        android:layout_margin="@dimen/dp_6"
        android:layout_width="90dp"
        android:layout_weight="1"
        android:layout_height="@dimen/dp_60"
        android:background="@color/light_transparent"/>
    <ImageView
        android:layout_margin="@dimen/dp_6"
        android:layout_width="90dp"
        android:layout_weight="1"
        android:layout_height="@dimen/dp_60"
        android:background="@color/light_transparent"/>
    <ImageView
        android:layout_margin="@dimen/dp_6"
        android:layout_width="90dp"
        android:layout_weight="1"
        android:layout_height="@dimen/dp_60"
        android:background="@color/light_transparent"/>
    <ImageView
        android:layout_margin="@dimen/dp_6"
        android:layout_width="90dp"
        android:layout_weight="1"
        android:layout_height="@dimen/dp_60" 
        android:background="@color/light_transparent"/>
</LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="#fff"
                        android:orientation="horizontal"
                        android:padding="@dimen/dp_5"
                        android:weightSum="5">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:id="@+id/iv_news"
                            android:background="@color/light_transparent"
                            android:drawablePadding="@dimen/dp_6"
                            android:gravity="center"
                            android:textColor="#000"
                            android:textSize="13sp" />

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:background="@color/light_transparent"
                            android:id="@+id/tv_member"
                            android:drawablePadding="@dimen/dp_6"
                            android:gravity="center"
                            android:textColor="#000"
                            android:textSize="13sp" />

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:id="@+id/iv_school_vip"
                            android:background="@color/light_transparent"
                            android:drawablePadding="@dimen/dp_6"
                            android:gravity="center"
                            android:textColor="#000"
                            android:textSize="13sp" />


                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:id="@+id/iv_share"
                            android:layout_weight="1"
                            android:background="@color/light_transparent"
                            android:drawablePadding="@dimen/dp_6"
                            android:gravity="center"
                            android:textColor="#000"
                            android:textSize="13sp" />



                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:id="@+id/iv_best"
                            android:background="@color/light_transparent"
                            android:drawablePadding="@dimen/dp_6"
                            android:gravity="center"
                            android:textColor="#000"
                            android:textSize="13sp" />
                    </LinearLayout>


                    <View
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/dp_3"
                        android:background="#fafafa" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/dp_44"
                        android:gravity="center|left"
                        android:orientation="horizontal">

                        <ImageView
                            android:layout_width="@dimen/dp_50"
                            android:background="#f1f1f1"
                            android:layout_height="@dimen/dp_20"
                            android:layout_marginStart="@dimen/dp_6.5"
                            android:layout_marginEnd="@dimen/dp_6.5"
                            android:padding="@dimen/dp_4"
                           />

                        <View
                            android:layout_width="@dimen/dp_2"
                            android:layout_height="@dimen/dp_20"
                            android:background="#f1f1f1" />

                        <com.gongwen.marqueen.MarqueeView
                            android:id="@+id/marqueeView"
                            android:background="#f1f1f1"
                            android:layout_width="match_parent"
                            android:layout_height="@dimen/dp_30"
                            android:flipInterval="8000"
                            android:inAnimation="@anim/in_top"
                            android:outAnimation="@anim/out_bottom"
                            app:marqueeAnimDuration="2000" />
                    </LinearLayout>


                    <LinearLayout
                        android:id="@+id/ll_flash_time"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/dp_7"
                        android:layout_marginRight="@dimen/dp_7"
                        android:layout_marginBottom="@dimen/dp_7"

                        android:orientation="vertical">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="@dimen/dp_30"
                            android:background="#f1f1f1"
                            android:orientation="horizontal">

                            <TextView
                                android:layout_width="@dimen/dp_50"
                                android:layout_height="wrap_content"
                                android:padding="@dimen/dp_9"
                                android:text="    "
                                android:textColor="#000"
                                android:background="#f1f1f1"
                                android:textSize="16sp"
                                android:textStyle="bold" />

                            <TextView
                                android:id="@+id/tv_time"
                                android:layout_width="@dimen/dp_60"
                                android:layout_height="@dimen/dp_30"
                                android:layout_gravity="center"
                                android:text=""
                                android:background="#f1f1f1"
                                android:textColor="#fff"
                                android:textSize="@dimen/dp_6" />

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:drawableRight="@mipmap/ic_arrow_right"
                                android:drawablePadding="@dimen/dp_10"
                                android:gravity="center|right"
                                android:paddingRight="@dimen/dp_7"
                                android:background="#f1f1f1"/>
                        </LinearLayout>

                        <android.support.v7.widget.RecyclerView
                            android:id="@+id/ry_timerPurse"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_margin="@dimen/dp_4" />
                    </LinearLayout>

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/dp_30"
                        android:layout_marginTop="@dimen/dp_4"
                        android:layout_marginBottom="@dimen/dp_4"
                        android:paddingLeft="@dimen/dp_20"
                        android:paddingRight="@dimen/dp_10"
                        android:background="#f1f1f1"
                        android:textColor="#000"
                        android:textStyle="bold" />

                    <android.support.v7.widget.RecyclerView
                        android:id="@+id/ryHot"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/dp_7"
                        android:layout_marginRight="@dimen/dp_7" />


                    <FrameLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/dp_5">


                        <ImageView
                            android:id="@+id/ivBanner"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/dp_10"
                            android:scaleType="fitXY" />

                        <TextView
                            android:id="@+id/tv_activity_name"
                            android:layout_width="match_parent"
                            android:layout_height="@dimen/dp_30"
                            android:background="#f1f1f1"
                            android:padding="@dimen/dp_3"
                            android:text=""
                            android:textColor="#fff"
                            android:textStyle="bold" />
                    </FrameLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/dp_8"
                        android:gravity="center"
                        android:orientation="horizontal">

                        <View
                            android:layout_width="@dimen/dp_50"
                            android:layout_height="@dimen/dp_1"
                            android:background="#d8d8d8" />

                        <TextView
                            android:id="@+id/tv_name"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="@dimen/dp_3"
                            android:layout_marginRight="@dimen/dp_3"
                            android:padding="@dimen/dp_8"
                            android:text="推荐商品" />

                        <View
                            android:layout_width="@dimen/dp_50"
                            android:layout_height="@dimen/dp_1"
                            android:background="#d8d8d8" />

                    </LinearLayout>

                    <android.support.v7.widget.RecyclerView
                        android:id="@+id/ryPurse"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content" />
                </LinearLayout>
            </FrameLayout>

        </com.example.commonlib.view.ObservableScrollView>

    </com.scwang.smartrefresh.layout.SmartRefreshLayout>

    <LinearLayout
        android:id="@+id/llTitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="horizontal"
        android:paddingTop="@dimen/dp_25"
        android:paddingRight="@dimen/dp_5"
        android:paddingBottom="@dimen/dp_5">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="horizontal"
            android:paddingLeft="@dimen/dp_4">

            <ImageView
                android:id="@+id/iv_location"
                android:layout_width="@dimen/dp_28"
                android:layout_height="@dimen/dp_28"
                android:layout_margin="@dimen/dp_6"
                android:src="@mipmap/icon_home_location" />

            <TextView
                android:id="@+id/ivKind"
                android:layout_width="@dimen/dp_58"
                android:layout_height="@dimen/dp_24"
                android:drawablePadding="@dimen/dp_8"
                android:ellipsize="end"
                android:gravity="center|left"
                android:src="@drawable/icon_logo"
                android:text="株洲"
                android:textColor="#fff"
                android:textSize="15sp"
                android:textStyle="bold" />
        </LinearLayout>


        <TextView
            android:id="@+id/tvSearch"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_36"
            android:layout_marginLeft="@dimen/dp_5"
            android:layout_marginRight="@dimen/dp_8"
            android:layout_weight="0.45"
            android:background="@drawable/home_search_bg"
            android:drawableLeft="@mipmap/home_search"
            android:drawablePadding="@dimen/dp_8"
            android:gravity="center|left"
            android:paddingLeft="@dimen/dp_6"
            android:text="搜索你想要的商品"
            android:textSize="13.5sp" />


        <ImageView
            android:id="@+id/ivShopCar"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_24"
            android:layout_weight="2.25"
            android:src="@mipmap/home_shopcar"
            android:visibility="gone" />

    </LinearLayout>
</RelativeLayout>
