<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:gravity="right"
    android:layout_height="wrap_content"
    android:orientation="horizontal">

    <com.ruochuan.bubblelayout.BubbleLayout
        android:id="@+id/tv_send"
        android:layout_marginLeft="@dimen/dp_110"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp_8"
        android:layout_marginRight="@dimen/dp_8"
        android:layout_marginBottom="@dimen/dp_8"
        android:padding="@dimen/dp_5"
        app:bgColor="#ffe04e"
        app:borderColor="#fff"
        app:orientation="right"
        app:radius="@dimen/dp_3">

        <TextView
            android:id="@+id/tv_content"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#000"
            android:textSize="@dimen/dp_16"
            />
    </com.ruochuan.bubblelayout.BubbleLayout>

    <!--app:bubbleArrowDirection="right"--><!--app:bubbleBackgroundColor="#ffe04e"--><!--app:bubbleCornerRadius="@dimen/dp_5"--><!--app:bubbleTextColor="#fff" />-->

    <ImageView
        android:layout_width="@dimen/dp_45"
        android:layout_height="@dimen/dp_45"
        android:layout_margin="@dimen/dp_8"
        android:src="@mipmap/ic_user_avatar_bg" />

</LinearLayout>