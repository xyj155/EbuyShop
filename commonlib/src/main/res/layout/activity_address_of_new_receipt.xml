<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#fff"
    android:id="@+id/ll_root"
    android:orientation="vertical"
    tools:context=".comonactivity.AddressOfNewReceiptActivity">

    <include layout="@layout/common_toolbar" />

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_1"
        android:background="#E5E5E5" />

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_55"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="@dimen/dp_110"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:text="收货人:"
                    android:textColor="#000"
                    android:textSize="@dimen/dp_15" />

                <EditText
                    android:id="@+id/et_username"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="#fff"
                    android:textCursorDrawable="@drawable/et_cursor" />
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_1"
                android:background="#fafafa" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_55"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="@dimen/dp_110"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:text="手机号码:"
                    android:textColor="#000"
                    android:textSize="@dimen/dp_15" />

                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="#fff"
                    android:id="@+id/et_tel"
                    android:inputType="number"
                    android:textCursorDrawable="@drawable/et_cursor" />
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_1"
                android:background="#fafafa" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_55"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="@dimen/dp_110"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:text="省 市 区:"
                    android:textColor="#000"
                    android:textSize="@dimen/dp_15" />

                <TextView
                    android:id="@+id/tv_local"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="#fff"
                    android:drawableRight="@mipmap/btn_reward_more"
                    android:drawablePadding="@dimen/dp_8"
                    android:gravity="center|right"
                    android:paddingRight="@dimen/dp_10"
                    android:text="请选择"
                    android:textColor="#000" />
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_1"
                android:background="#fafafa" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_170"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="@dimen/dp_110"
                    android:layout_height="match_parent"
                    android:gravity="center|top"
                    android:padding="@dimen/dp_15"
                    android:text="详细地址:"
                    android:textColor="#000"
                    android:textSize="@dimen/dp_15" />

                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="#fff"
                    android:gravity="top"
                    android:padding="@dimen/dp_10"
                    android:id="@+id/et_detail"
                    android:textCursorDrawable="@drawable/et_cursor" />
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_8"
                android:background="#fafafa" />
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_55"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="@dimen/dp_110"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:text="设为默认地址:"
                    android:textColor="#000"
                    android:textSize="@dimen/dp_15" />

                <com.example.commonlib.view.SwitchButton
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:id="@+id/sw_default"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="@dimen/dp_16" />
            </RelativeLayout>
        </LinearLayout>

        <TextView
            android:id="@+id/tv_add_news_address"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_55"
            android:layout_gravity="bottom"
            android:background="#ffd321"
            android:gravity="center"
            android:text="新增收货地址"
            android:textColor="#000"
            android:textSize="@dimen/dp_16" />
    </FrameLayout>
</LinearLayout>